.body {
	background: #f5f5f5;
	color: #4d4d4d;
	height: 100vh;
	width: 100vw;
  overflow: hidden;
	/* line-height: 1.4em; */
}
button, checkbox {
	outline: none;
	box-sizing: border-box;
}
.main {
	background: #fff;
    margin: 130px 0 40px 0;
    position: relative;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 25px 50px 0 rgba(0, 0, 0, 0.1);
}
.title {
	position: absolute;
    top: -155px;
    width: 100vw;
    font-size: 100px;
    font-weight: 100;
    text-align: center;
    color: rgba(175, 47, 47, 0.15);
    -webkit-text-rendering: optimizeLegibility;
    -moz-text-rendering: optimizeLegibility;
    text-rendering: optimizeLegibility;
}
.new-todo {
	padding: 16px 16px 16px 60px;
    border: none;
    background: rgba(0, 0, 0, 0.003);
    box-shadow: inset 0 -2px 1px rgba(0, 0, 0, 0.03);
}
.todos {
	position: relative;
    z-index: 2;
    border-top: 1px solid #e6e6e6;
}
.toggle-all {
	position: absolute;
    top: -50px;
    left: -18px;
    width: 60px;
    height: 38px;
    text-align: center;
	border: none;
	transform: rotate(90deg);
}
.toggle-all::before {
    content: '‚ùØ';
    font-size: 22px;
    color: #e6e6e6;
    padding: 10px 27px 10px 27px;
}